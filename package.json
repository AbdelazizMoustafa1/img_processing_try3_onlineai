{
  "name": "image-resizing-server",
  "version": "1.0.0",
  "description": "A server for resizing images using Node.js and TypeScript",
  "main": "server.ts",
  "scripts": {
    "start": "nodemon --watch '*.ts' --exec 'ts-node' server.ts",
    "test": "ts-node -r tsconfig-paths/register jasmine.ts",
    "lint": "eslint '*.ts'",
    "format": "prettier --write '*.ts'"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "sharp": "^0.25.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jasmine": "^3.6.3",
    "@types/node": "^15.0.5",
    "@types/sharp": "^0.9.0",
    "eslint": "^7.14.0",
    "jasmine": "^3.7.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.1.2",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.2",
    "typescript": "^4.2.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": "prettier"
  }
}
